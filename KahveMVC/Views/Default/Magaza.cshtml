@model KahveMVC.ViewModels.MagazaViewModel
@{
    ViewBag.Title = "Magaza";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-section cta">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <div class="cta-inner text-center rounded">
                    <h2 class="section-heading mb-5">
                        <span class="section-heading-upper">@Model.Magaza.ustBaslik</span>
                        <span class="section-heading-lower">@Model.Magaza.anaBaslik</span>
                    </h2>
                    <ul class="list-unstyled list-hours mb-5 text-left mx-auto">
                        @foreach (var deger in Model.MagazaSaatler)
                        {
                            <li class="list-unstyled-item list-hours-item d-flex">
                               @deger.gun
                                <span class="ml-auto">@deger.saat</span>
                            </li>
                        }
                    </ul>
                    <p class="address mb-5">

                        @Html.Raw(Model.Magaza.adres)

                    </p>
                    <p class="mb-0">
                        <small>
                            <em>Telefon 7 / 24 </em>
                        </small>
                        <br>
                        @Model.Magaza.telefon
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="page-section about-heading">
    <div class="container">
        <img class="img-fluid rounded about-heading-img mb-3 mb-lg-0" src="~/Content/img/@Model.Hakkimizda.foto" alt="">
        <div class="about-heading-content">
            <div class="row">
                <div class="col-xl-9 col-lg-10 mx-auto">
                    <div class="bg-faded rounded p-5">
                        <h2 class="section-heading mb-4">
                            <span class="section-heading-upper">@Model.Hakkimizda.ustBaslik</span>
                            <span class="section-heading-lower">@Model.Hakkimizda.baslik</span>
                        </h2>
                        @Html.Raw(Model.Hakkimizda.icerik)
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

