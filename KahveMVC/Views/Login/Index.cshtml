@model KahveMVC.Models.EntityFramework.kullanici
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Login</title>
    <!-- Custom fonts for this template-->
    <link href="~/Content/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href="~/Content/admin/css/sb-admin.css" rel="stylesheet">
    <style type="text/css">
        .input-validation-error{
            border:solid red 2px;
        }
        .field-validation-error{
            color:red;
            font-weight:bold;
        }

    </style>
</head>
<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Kullanıcı Girişi</div>
            <div class="card-body">

                @using (Html.BeginForm("giris", "login", new { ReturnUrl = Request.QueryString["ReturnUrl"], FormMethod.Post }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.TextBoxFor(m => m.ad, new { @class = "form-control", placeholder = "Kullanıcı Adı", autofocus = "autofocus" })
                            <label for="ad">Kullanıcı Adı</label>
                            @Html.ValidationMessageFor(m => m.ad)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.PasswordFor(m => m.sifre, new { @class = "form-control", placeholder = "Parola" })
                            <label for="sifre">Parola</label>
                            @Html.ValidationMessageFor(m => m.sifre)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(m => m.BeniHatirla)
                                Beni Hatırla
                            </label>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary btn-block" value="Giriş" />

                }


                @if (ViewBag.Hata!=null)
                {
                    <div class="alert alert-danger mt-4">
                        @ViewBag.Hata
                    </div>
                }

            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Content/admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>